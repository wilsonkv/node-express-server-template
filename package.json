{
  "name": "mock-project-server",
  "version": "0.0.0",
  "private": true,
  "engines": {
    "node": ">=7.10.1"
  },
  "scripts": {
    "db:migrate": "node postgrator.js",
    "db:seed": "for file in ./seeds/*.js; do node $file; done",
    "db:seedForWindows": "for %f in (./seeds/*) do node ./seeds/%f",
    "precommit": "lint-staged",
    "start": "node ./bin/www",
    "test": "mocha --recursive",
    "test:watch": "mocha --recursive --watch"
  },
  "lint-staged": {
    "*.js": [
      "prettier --single-quote --trailing-comma es5 --write",
      "git add"
    ]
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "~1.15.2",
    "cookie-parser": "~1.4.3",
    "cors": "^2.8.3",
    "debug": "~2.2.0",
    "express": "~4.14.0",
    "express-basic-auth": "^1.0.2",
    "jsonwebtoken": "^7.4.0",
    "morgan": "~1.7.0",
    "pg": "^6.1.5",
    "postgrator": "^2.10.0",
    "postgrator-cli": "^0.1.0",
    "underscore": "^1.8.3",
    "validator": "^7.1.0"
  },
  "devDependencies": {
    "btoa": "^1.1.2",
    "dotenv": "^4.0.0",
    "expect": "^1.20.2",
    "husky": "^0.13.3",
    "lint-staged": "^3.4.1",
    "mocha": "^3.3.0",
    "prettier": "^1.3.1",
    "supertest": "^3.0.0"
  }
}
